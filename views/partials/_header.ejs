<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (loggedIn) { %>
      <div class="form-inline text-right">
        <a class="nav-item mr-2">Logged In As: <%= loggedIn.email %></a>
        <form method="POST" action="/logout">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      </div>
      <% } else { %>
      <div class="form-inline text-right">
        <form action="/login">
          <!-- <input class="form-control mr-2" type="email" name="email" placeholder="Email Address">
          <input class="form-control mr-2" type='password' name='password' placeholder='Password'> -->
          <button type="submit" class="btn btn-outline-dark mr-2">Login</button>
        </form>
        <form action='/register'>
          <button type="submit" class="btn btn-outline-dark">Register</button>
        </form>
      </div>
      <% } %>
  </nav>
</header>